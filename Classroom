#item b:
def square(a):
    return a**2
    
def hipotenuse(b,c):
    return (square(b) + square(c))**(1/2)
    
print(hipotenuse(3,4))
print( )

#item c:
def square(a):
    return a**2
    
def hipotenuse(b,c):
    return (square(b) + square(c))**(1/2)
    
print(hipotenuse(3,square(2)))
